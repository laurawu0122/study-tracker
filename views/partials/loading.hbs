<div id="globalLoading" class="fixed inset-0 z-50 flex items-center justify-center bg-white dark:bg-gray-900" style="display: none;">
    <div class="text-center">
        <div class="animate-spin rounded-full h-8 w-8 border-2 border-primary-600 border-t-transparent mx-auto mb-4"></div>
        <p class="text-gray-600 dark:text-gray-400">正在加载...</p>
    </div>
</div>

<script>
// 全局 loading 控制
window.globalLoading = {
    show: function() {
        const loading = document.getElementById('globalLoading');
        if (loading) {
            loading.style.display = 'flex';
        }
    },
    
    hide: function() {
        const loading = document.getElementById('globalLoading');
        if (loading) {
            loading.style.display = 'none';
        }
    }
};
</script> 