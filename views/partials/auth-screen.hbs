<div class="min-h-screen gradient-bg flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2">📚</h1>
            <h2 class="text-2xl font-bold text-white mb-2">学习追踪系统</h2>
            <p class="text-white/80">现代化学习管理平台</p>
        </div>

        <div class="glass-effect rounded-2xl p-8">
            <!-- Login Form -->
            <div x-show="authMode === 'login'">
                <h3 class="text-xl font-semibold text-white mb-6 text-center">登录账户</h3>
                <form @submit.prevent="login" class="space-y-4">
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">用户名或邮箱</label>
                        <input type="text" x-model="loginForm.username" required
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">密码</label>
                        <input type="password" x-model="loginForm.password" required autocomplete="current-password"
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <button type="submit" :disabled="authLoading" 
                        class="w-full bg-white text-gray-900 py-3 px-4 rounded-lg font-medium hover:bg-white/90 disabled:opacity-50">
                        <span x-show="!authLoading">登录</span>
                        <span x-show="authLoading">登录中...</span>
                    </button>
                </form>
                <div class="mt-6 text-center">
                    <button @click="authMode = 'register'" class="text-white/80 hover:text-white text-sm">
                        还没有账户？立即注册
                    </button>
                </div>
            </div>

            <!-- Register Form -->
            <div x-show="authMode === 'register'">
                <h3 class="text-xl font-semibold text-white mb-6 text-center">创建账户</h3>
                <form @submit.prevent="register" class="space-y-4">
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">用户名</label>
                        <input type="text" x-model="registerForm.username" required
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">邮箱</label>
                        <input type="email" x-model="registerForm.email" required
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">密码</label>
                        <input type="password" x-model="registerForm.password" required autocomplete="new-password"
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <div>
                        <label class="block text-white/80 text-sm font-medium mb-2">确认密码</label>
                        <input type="password" x-model="registerForm.confirmPassword" required autocomplete="new-password"
                            class="w-full px-4 py-3 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-white/50">
                    </div>
                    <button type="submit" :disabled="authLoading" 
                        class="w-full bg-white text-gray-900 py-3 px-4 rounded-lg font-medium hover:bg-white/90 disabled:opacity-50">
                        <span x-show="!authLoading">注册</span>
                        <span x-show="authLoading">注册中...</span>
                    </button>
                </form>
                <div class="mt-6 text-center">
                    <button @click="authMode = 'login'" class="text-white/80 hover:text-white text-sm">
                        已有账户？立即登录
                    </button>
                </div>
            </div>
        </div>
    </div>
</div> 