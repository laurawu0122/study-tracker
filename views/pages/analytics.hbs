{{!-- 数据分析页面 --}}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900" id="analyticsContainer">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- 页面标题 -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">数据分析</h1>
