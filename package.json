{
  "name": "study-tracker",
  "version": "2.0.0",
  "description": "Modern study tracking application with Ghost-inspired architecture",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test/dashboard.test.js",
    "test:regression": "node scripts/test-regression.js",
    "test:all": "npm run test && npm run test:regression",
    "quality": "npx eslint assets/js/ --ext .js",
    "build": "postcss assets/css/input.css -o assets/css/tailwind.css",
    "build:prod": "postcss assets/css/input.css -o assets/css/tailwind.css --env production",
    "analyze-css": "postcss assets/css/input.css -o assets/css/tailwind.css --env analyze",
    "docker:build": "docker build -t study-tracker-app .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t study-tracker-app:dev .",
    "docker:up": "docker-compose up -d",
    "docker:up-dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:down-dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f app",
    "docker:logs-dev": "docker-compose -f docker-compose.dev.yml logs -f app",
    "docker:restart": "docker-compose restart",
    "docker:restart-dev": "docker-compose -f docker-compose.dev.yml restart",
    "docker:cleanup": "docker system prune -f",
    "deploy:prod": "./scripts/docker-deploy.sh prod",
    "deploy:dev": "./scripts/docker-deploy.sh dev",
    "docker:manage": "./scripts/docker-manage.sh",
    "build:css": "NODE_ENV=production postcss ./assets/css/input.css -o ./assets/css/tailwind.css",
    "build:css:dev": "postcss ./assets/css/input.css -o ./assets/css/tailwind.css",
    "build:css:watch": "postcss ./assets/css/input.css -o ./assets/css/tailwind.css --watch",
    "build:css:analyze": "NODE_ENV=production postcss ./assets/css/input.css -o ./assets/css/tailwind.css --verbose",
    "analyze:css": "node scripts/analyze-css.js",
    "build:optimized": "node scripts/build-optimized.js",
    "build:js": "webpack --mode production",
    "db:setup": "node scripts/setup-database.js",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback && knex migrate:latest && knex seed:run",
    "db:clean": "node scripts/clean-database.js",
    "start:project": "./scripts/start-project.sh",
    "workflow": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh",
    "workflow:all": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh all",
    "workflow:test": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh test",
    "workflow:quality": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh quality",
    "workflow:build": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh build",
    "workflow:start": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh start",
    "workflow:stop": "chmod +x scripts/dev-workflow.sh && ./scripts/dev-workflow.sh stop",
    "precommit": "npm run test && npm run quality"
  },
  "dependencies": {
    "alpinejs": "^3.13.3",
    "autoprefixer": "^10.4.16",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-handlebars": "^6.0.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.3",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.3",
    "pg": "^8.16.2",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "validator": "^13.15.15",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "cssnano": "^7.0.7",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "postcss-cli": "^11.0.1",
    "puppeteer": "^21.5.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "study",
    "tracker",
    "modern",
    "ghost-inspired",
    "authentication",
    "mobile-first"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  },
  "bugs": {
    "url": "your-repository-url/issues"
  },
  "homepage": "your-repository-url#readme"
}
